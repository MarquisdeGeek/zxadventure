;
; *** Sprite data graphics ***
;
DATA_GRAPHIC_PLAYER_LEFT  equ 1
DATA_GRAPHIC_PLAYER_RIGHT equ 3
DATA_GRAPHIC_PLAYER_UP    equ 5
DATA_GRAPHIC_PLAYER_DOWN  equ 7
DATA_GRAPHIC_KEY          equ 9
DATA_GRAPHIC_SWORD        equ 10
DATA_GRAPHIC_CHALICE      equ 11
DATA_GRAPHIC_DRAGON       equ 12
DATA_GRAPHIC_DRAGON_DEAD  equ 13
DATA_GRAPHIC_PORTCULLIS   equ 14
DATA_GRAPHIC_CROSS        equ 15

DATA_GRAPHICS_SPRITES
  ; null
  defb  0,0,0,0,0,0,0,0

  ; Player left
  defb  %01111110, %01111110, %01011110, %01011110, %00011000, %00111000, %01101000,%00001100
  defb  %01111110, %01111110, %01011110, %01011110, %00011000, %00111000, %00111000,%00001100
  ; Player right
  defb  %01111110, %01111110, %01111010, %01111010, %00011000, %00011100, %00011110, %00110000
  defb  %01111110, %01111110, %01111010, %01111010, %00011000, %00011100, %00011000, %00110000
  ; Player up
  defb  %11111111, %11111111, %11011011, %11011011, %00111100, %01111110, %11011011, %10011001
  defb  %11111111, %11111111, %11011011, %11011011, %00111100, %01111110, %01111110, %00111100
  ; Player down
  defb  %00000000, %11111111, %11111111, %11111111, %11011011, %00111100, %01111110, %11011011
  defb  %00000000, %11111111, %11111111, %11111111, %11011011, %00111100, %01111110, %00111100

  ; Key  (9)
  defb   0,0,%00000111,%11111101,%10100111,0,0,0

  ; Sword    (10)
  defb   0,0,%00100000,%01100000,%11111111,%01100000,%00100000,0

  ; Chalice     (11)
  defb   %10000001,%10000001,%11000011,%01111110,%01111110,%00011000,%00011000,%01111110

  ; Dragon     (12)
  defb   %00011000,%00111100, %11111111,%00011000,%00111100,%00111100,%00011000,%11111111
  defb   %00000000,%00000000, %00000000,%00000000,%00000000,%00011000,%00111100,%11111111

  ; portcullis     (14)
  defb   %11111111,%10011001,%10011001,%10011101,%10010101,%10011101,%10011001, %10011001
  
  ; cross (15)
  defb   %00011000, %00011000, %11111111, %11111111, %00011000, %00011000, %00011000, %00011000
